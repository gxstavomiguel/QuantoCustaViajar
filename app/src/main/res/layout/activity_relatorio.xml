<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray"
    android:padding="16dp">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/titulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="40dp"
            android:text="Relatório"
            android:textAlignment="center"
            android:textSize="24sp" />

    </LinearLayout>

    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/linearLayout"
        android:layout_marginTop="25dp"
        android:columnCount="2"
        android:orientation="horizontal"
        android:rowCount="5">

        <TextView
            android:id="@+id/subTituloDestino"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="Destino"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/contentDestino"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="Conteúdo Destino"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/subTituloPeriodo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="Período"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/contentPeriodo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="Conteúdo Período"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/subTituloNPessoas"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="Qt. pessoas"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/contentNPessoas"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="Conteúdo N Pessoas"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/subTituloCustoPessoa"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="Custo por pessoa"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/contentCustoPessoa"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="Conteúdo custo pessoa"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/subTituloCustoTotal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="Custo total"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/contentCustoTotal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="Conteúdo custo total"
            android:textSize="18sp" />

    </GridLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="31dp">

        <Button
            android:id="@+id/btnVoltar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Voltar"
            android:backgroundTint="@color/golden"
            android:layout_marginEnd="8dp" />

    </LinearLayout>

</RelativeLayout>
