<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <RadioGroup
        android:layout_width="377dp"
        android:layout_height="612dp" >

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Selecione o tipo de gasto"
            android:textAlignment="center"
            android:layout_marginBottom="40sp"
            android:textSize="24sp" />

        <RadioButton
            android:id="@+id/radioButtonGasolina"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Gasolina"
            android:textAlignment="viewStart"
            android:textSize="20sp" />

        <RadioButton
            android:id="@+id/radioButtonRefeicoes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Refeições"
            android:textSize="20sp" />

        <RadioButton
            android:id="@+id/radioButtonHospedagem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hospedagem"
            android:textSize="20sp" />

        <RadioButton
            android:id="@+id/radioButtonEntretenimento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Entretenimento/diversos"
            android:textSize="20sp" />

        <RadioButton
            android:id="@+id/radioButtonTarifas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tarifas aéreas"
            android:textSize="20sp" />

    </RadioGroup>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="31dp">

        <Button
            android:id="@+id/btnVoltar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Voltar"
            android:layout_marginEnd="8dp" />

        <Button
            android:id="@+id/btnConfirmaTipoGasto"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Dados do gasto"
            android:layout_marginEnd="8dp" />


    </LinearLayout>

</RelativeLayout>
